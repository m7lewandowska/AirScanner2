<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/station_of_sensor_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        tools:text="NameOfTheStation" />

    <LinearLayout
        android:id="@+id/sensorInfoRow_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sensor_paramName_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:text="paramName" />

        <TextView
            android:id="@+id/sensor_paramCode_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="14sp"
            tools:text="paramCode" />
    </LinearLayout>

</LinearLayout>